<%- include("partials/merchantheader") %>

<% if(ownedProducts.length === 0){ %>
  <div class="container" style="margin:40vh auto;">
    <h2>You haven't added any products yet. If you would like to add a product, <a href="/addProduct">Click Here</a></h2>
  </div>
<% }else{ %>
  <section class="py-5">
    <div class="container px-4 px-lg-5 mt-2">
      <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        <% ownedProducts.forEach((product)=>{ %>
          <div class="col mb-5" >
            <div class="card h-100" >
                <!-- Product image-->
                <img class="card-img-top" src="<%= product.Images[0] %>" width="100%" height="50%" alt="..." />
                <!-- Product details-->
                <div class="card-body p-1">
                    <div class="text-center">
                        <!-- Product name-->
                        <h5 class="fw-bolder"><%= product.ProductName %></h5>
                        <p class="mb-1" style="font-size: small;">Category: <%= product.Category %></p>
                        <p class="mb-1">Price: <span style="color: lightgreen;">NGN </span><%= product.Price %></p>
                        <p style="margin-bottom: 0px;">Views: <%= product.Views %></p>
                    </div>
                </div>
                <!-- Product actions-->
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                  <a href="/product/<%= product.id %>/edit" style="width: 100%;" class="btn btn-dark btn-block ms-auto">Edit this product</a>
                  <form action="/product/<%= product.id %>?_method=delete" method="post">
                    <button style="width: 100%;" class="btn btn-dark btn-block ms-auto mt-2">Delete Product</button>
                  </form>  
                </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </section>
<% } %>







<%- include("partials/merchantfooter") %>